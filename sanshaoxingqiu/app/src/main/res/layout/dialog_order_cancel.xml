<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="请选择取消原因（必选）"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:paddingLeft="8dp"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_productinfo_dialog_close" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_cancel_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rcv_cancel_reason"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="2dp"
        android:text="@string/order_cancel_tip"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/btn_commit"
        style="@style/ordercommit_btn"
        android:layout_below="@+id/tv_tip"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="80dp"
        android:enabled="false"
        android:text="提交申请" />


</RelativeLayout>
