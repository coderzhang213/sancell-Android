<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context="cn.sancell.xingqiu.homepage.SancelIntroduceActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_sancel_introduct" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_buy_member"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/theme_btn_click_style"
        android:gravity="center"
        android:text="加入猩球VIP"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
