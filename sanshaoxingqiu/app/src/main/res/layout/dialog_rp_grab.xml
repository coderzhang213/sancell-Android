<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="410dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/icon_rp_open_rp_bg">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_rp_open_rp_close" />

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_below="@+id/iv_header"
        android:drawableRight="@mipmap/icon_rp_pin"
        tools:text="xiong"/>
    <TextView
        android:id="@+id/tv_send_rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="发了一个红包"
        android:textColor="#ff9893"
        android:textSize="14sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_rp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:text="恭喜发财,大吉大利"
        />

    <ImageView
        android:id="@+id/iv_open_rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tip"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/jrmf_rp_open_rp"
        android:layout_marginTop="50dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_look_others"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_open_rp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/jrmf_rp_open_rp_arrow"
        android:layout_centerHorizontal="true"
        android:text="看看大家的手气"
        android:textSize="14sp"
        android:textColor="@color/white"/>
</RelativeLayout>