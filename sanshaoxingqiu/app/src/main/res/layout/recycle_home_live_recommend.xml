<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="56dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginRight="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_recommend_img"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="1dp"
            android:background="@drawable/shape_img_round_line_bg"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_liver_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/iv_recommend_img"
            android:layout_alignBottom="@id/iv_recommend_img"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_liver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="lulunlulunlulun"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

</LinearLayout>