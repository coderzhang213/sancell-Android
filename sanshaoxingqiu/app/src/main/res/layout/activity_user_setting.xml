<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="cn.sancell.xingqiu.homeuser.UserSettingActivity">

    <RelativeLayout
        android:id="@+id/rl_safe_center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/safe_center_title"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_toright3"
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_safe_center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_stroke1" />

    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/view_line3"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:gravity="center_vertical"
            android:text="@string/clear_cache"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_toright"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_toright"
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_clear_cache"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_stroke1" />

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/view_line1"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/about_us"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_toright1"
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_about_us"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_stroke1" />

    <TextView
        android:id="@+id/tv_out_login"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/theme_btn_click_style"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
