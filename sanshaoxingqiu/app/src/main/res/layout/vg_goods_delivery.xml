<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:background="@drawable/shape_goods_delivery_radius_8">

    <RelativeLayout
        android:id="@+id/rl_deliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_deliver_get"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignBottom="@+id/tv_deliver_title"
            android:src="@mipmap/icon_goods_location" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_deliver_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/iv_deliver_get"
            android:text="@string/deliver_to"
            android:textColor="@color/text_main"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_deliver_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deliver_title"
            android:layout_alignStart="@+id/tv_deliver_title"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="会员分享，受邀者购买返分享者红包"
            android:textColor="@color/text_normal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cant_deliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_deliver_desc"
            android:layout_alignStart="@+id/tv_deliver_title"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="当前地址无法配送"
            android:textColor="#E61E17" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_productinfo_more_mark"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_deliver_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_server"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#FAFCFC">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_server_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3件起售 | 只发江浙沪 | 7天无理由退换货"
            android:textSize="12sp"
            android:textColor="@color/text_second"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_goods_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_productinfo_more_mark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>


</LinearLayout>