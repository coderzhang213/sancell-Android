<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_search_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="14dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textColor="@color/text_main"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_delete_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_delete_history" />

    </RelativeLayout>

    <cn.sancell.xingqiu.widget.LabelsView
        android:id="@+id/view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        app:isIndicator="true"
        app:labelBackground="@drawable/shape_history_search_bg"
        app:labelTextColor="@drawable/label_text_color"
        app:labelTextPaddingBottom="5dp"
        app:labelTextPaddingLeft="20dp"
        app:labelTextPaddingRight="20dp"
        app:labelTextPaddingTop="5dp"
        app:labelTextSize="@dimen/sp_14"
        app:lineMargin="8dp"
        app:maxLines="3"
        app:selectType="NONE"
        app:wordMargin="8dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="12dp"
        android:text="热门搜索"
        android:textColor="@color/text_main"
        android:textSize="14sp"
        android:textStyle="bold" />


    <cn.sancell.xingqiu.widget.LabelsView
        android:id="@+id/view_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        app:isIndicator="true"
        app:labelBackground="@drawable/shape_hot_search_bg"
        app:labelTextColor="@drawable/label_text_color"
        app:labelTextPaddingBottom="5dp"
        app:labelTextPaddingLeft="20dp"
        app:labelTextPaddingRight="20dp"
        app:labelTextPaddingTop="5dp"
        app:labelTextSize="@dimen/sp_14"
        app:lineMargin="8dp"
        app:selectType="NONE"
        app:wordMargin="8dp" />


</LinearLayout>