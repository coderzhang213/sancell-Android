<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/filter_dialog_bg_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_not_filter"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/filter_select_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/not_filter" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="@color/filter_slect_text_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_filter"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/nim_avatar_group" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滤镜"
                android:textColor="@color/filter_text_color"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>