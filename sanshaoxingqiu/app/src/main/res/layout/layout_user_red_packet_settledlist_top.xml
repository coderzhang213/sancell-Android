<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="待结算红包金额总计"
        android:textColor="@color/color_text5"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:id="@+id/iv_reward_price_introduce"
        android:layout_width="46dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:src="@mipmap/icon_reward_price_introduce" />

    <cn.sancell.xingqiu.widget.RelativeSizeTextView
        android:id="@+id/tv_remain_red_packet_settled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_reward_price_introduce"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/color_F77300"
        android:textSize="@dimen/sp_38"
        fresco:end_text_color="@color/color_F77300"
        fresco:startText="¥"
        fresco:start_proportion="0.73"
        fresco:start_text_color="@color/color_F77300" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/tv_remain_red_packet_settled"
        android:layout_marginTop="40dp"
        android:background="@color/color_stroke5"
        android:gravity="center"
        android:text="- 待结算明细 -"
        android:textColor="@color/color_text3"
        android:textSize="@dimen/sp_13" />

</RelativeLayout>
