<?xml version="1.0" encoding="utf-8"?>
<com.facebook.drawee.view.SimpleDraweeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sdv_pic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/round_white_16"
    fresco:actualImageScaleType="focusCrop"
    fresco:failureImage="@color/color_f1f1f1"
    fresco:failureImageScaleType="fitXY"
    fresco:placeholderImage="@color/color_f1f1f1"
    fresco:placeholderImageScaleType="fitXY"
    fresco:roundBottomLeft="true"
    fresco:roundBottomRight="true"
    fresco:roundTopLeft="true"
    fresco:roundTopRight="true"
    fresco:roundedCornerRadius="16dp"
    fresco:viewAspectRatio="1" />

