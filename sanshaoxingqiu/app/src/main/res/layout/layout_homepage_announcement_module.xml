<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp">

    <ImageView
        android:id="@+id/iv_sancell_information"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/iv_sancell_information" />


    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="6dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/icon_homepage_toright" />

    <cn.sancell.xingqiu.widget.MarqueeView
        android:id="@+id/mv_sancell_information"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_toRightOf="@+id/iv_sancell_information"
        app:mvAnimDuration="1000"
        app:mvInterval="3000"
        app:mvSingleLine="true"
        app:mvTextColor="@color/color_text1"
        app:mvTextSize="@dimen/sp_12"
        app:paddingStart="0dp" />

</RelativeLayout>
