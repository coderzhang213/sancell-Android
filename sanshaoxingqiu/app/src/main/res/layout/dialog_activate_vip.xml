<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white_8"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待激活"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_old_user_remain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="您的平移金额："
            android:textColor="@color/color_text5"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:lineSpacingExtra="5dp"
            android:text="尊敬的用户感谢您之前成为我们的VIP会员"
            android:textColor="@color/color_text5"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="5dp"
            android:text="您可以点击 [ 激活我的猩球VIP ] 按钮差额购买金猩或红猩超值礼包成为我们全新猩球VIP，平移金额多余部分我们将已红包的形式发放给您。"
            android:textColor="@color/color_text5"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="*红包¥1可兑换1元等值商品"
            android:textColor="@color/color_text6"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_activate_vip_btn"
            android:layout_width="231dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_activate_vip_btn" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_productinfo_dialog_close" />
</RelativeLayout>
