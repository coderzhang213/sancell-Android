<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="482dp"
    android:paddingTop="5dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="配送至"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_productinfo_dialog_close" />



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/tv_"
        app:tabIndicatorColor="@color/color_theme"
        app:tabIndicatorHeight="1dp"
        app:tabBackground="@color/colorTran"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/color_theme"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_text1" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayout"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:overScrollMode="never" />

</RelativeLayout>
