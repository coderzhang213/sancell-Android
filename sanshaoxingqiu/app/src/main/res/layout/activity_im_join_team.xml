<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_head_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="55dp"
        android:background="@mipmap/nim_avatar_group"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_head_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="范冰冰粉丝群"
        android:textColor="@color/color_text1"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="群号:"
            android:textColor="#ababab"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_team_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="289人"
            android:textColor="#ababab"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/team_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/team_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="群人数"
            android:textColor="#ababab"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/member_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="289人"
            android:textColor="#ababab"
            android:textSize="13sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_wrap"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/nim_message_button_bottom_send_selector"
        android:text="@string/team_apply_to_join"
        android:textColor="@color/colorWhite" />

</LinearLayout>