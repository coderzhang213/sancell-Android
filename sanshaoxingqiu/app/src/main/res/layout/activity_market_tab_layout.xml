<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tab_layout" />


    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fcfcfc"
        android:gravity="bottom"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/homebtn_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home"
                android:layout_width="23dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/homebtn_tab_home_bg" />

            <TextView
                android:id="@+id/tv_tab_home"
                style="@style/text_11_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/home_tab_text_selector"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_class"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_class"
                android:layout_width="wrap_content"
                android:layout_height="23dip"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/homebtn_tab_class_bg" />

            <TextView
                android:id="@+id/tv_tab_class"
                style="@style/text_11_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textColor="@color/home_tab_text_selector"
                android:textStyle="bold" />
        </LinearLayout>




        <LinearLayout
            android:visibility="gone"
            android:id="@+id/homebtn_tab_cart"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_marginBottom="2dp"
                android:src="@drawable/homebtn_tab_car_bg" />

            <TextView
                style="@style/text_11_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textColor="@color/home_tab_text_selector"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>