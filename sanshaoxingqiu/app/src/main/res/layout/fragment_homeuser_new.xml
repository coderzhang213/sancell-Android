<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_stroke5">

    <TextView
        android:id="@+id/tv_user_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="@string/user_title"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_toLeftOf="@+id/iv_contact"
        android:src="@mipmap/icon_message"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_contact"
        android:layout_width="43dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_black_contact"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_contact"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/tl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/me_head_bg">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/NoSpaceActionBarTheme"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/btn_back"
                            android:layout_width="50dp"
                            android:layout_height="44dp"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_black_back"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:maxWidth="240dp"
                            android:maxLength="12"
                            android:singleLine="true"
                            android:textColor="@color/color_text1"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout
                    android:id="@+id/rl_edit_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_user_photo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:scaleType="fitXY"
                        fresco:failureImage="@mipmap/icon_default_photo"
                        fresco:failureImageScaleType="fitXY"
                        fresco:placeholderImage="@mipmap/icon_default_photo"
                        fresco:placeholderImageScaleType="fitXY"
                        fresco:roundAsCircle="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_toright"
                        android:layout_toRightOf="@+id/sdv_user_photo"
                        android:orientation="vertical"
                        android:paddingLeft="8dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/color_text1"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_member_mark"
                                android:layout_width="39dp"
                                android:layout_height="13dp"
                                android:layout_marginLeft="4dp"
                                android:scaleType="fitXY"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/iv_no_member_mark"
                                android:layout_width="46dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="4dp"
                                android:background="@drawable/home_levle_bg"
                                android:gravity="center"
                                android:textColor="#E6B27E"
                                android:textSize="10sp"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="102dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/home_user_id_bg"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp">

                                <TextView
                                    android:id="@+id/tv_member_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/color_text1"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="ID:836270" />

                                <TextView
                                    android:id="@+id/tv_copy"
                                    android:layout_width="32dp"
                                    android:layout_height="16dp"
                                    android:layout_marginLeft="3dp"
                                    android:background="@drawable/round_color_text1_stroke1_2"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="复制"
                                    android:textColor="#FF242526"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_vip_end_time"
                                android:layout_width="102dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/home_user_id_bg"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/vip_end_time"
                                    android:layout_width="102dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/color_text1"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="00-00-00 到期" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_toright"
                        android:layout_width="9dp"
                        android:layout_height="17dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/icon_toright3" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/iv_member_open"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/rl_edit_userinfo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/home_user_info_bg"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_gr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="个人主页"
                        android:textColor="#242526"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_gr"
                        android:text="· 记录直播点滴"
                        android:textColor="#242526"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/user_hoe_net" />
                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_mod"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_below="@+id/tl_head"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-43dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/home_user_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计收益"
                    android:textColor="@color/user_cdr"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="0.00"
                        android:textColor="@color/user_cdr"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_money"
                        android:text="元"
                        android:textColor="@color/user_cdr"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/home_user_s"
                        android:drawablePadding="5dp"
                        android:text="查看详情"
                        android:textColor="@color/user_cdr"
                        android:textSize="12sp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_money"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/ll_mod"
                android:layout_margin="12dp"
                android:background="@drawable/round_white_8"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_red_packet_voucher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_red_voucher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text="0"
                                android:textColor="@color/color_text1"
                                android:textSize="@dimen/sp_16" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center_vertical"
                                android:text="张"
                                android:textColor="@color/text_main"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="代金券"
                            android:textColor="@color/read_color"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_red_packet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">


                        <cn.sancell.xingqiu.widget.RelativeSizeTextView
                            android:id="@+id/tv_red_packet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/color_text1"
                            android:textSize="@dimen/sp_16"
                            fresco:startText="¥"
                            fresco:start_proportion="0.5"
                            fresco:start_text_color="@color/color_text1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/red_packet_title"
                            android:textColor="@color/read_color"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_red_packet_settled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">


                        <cn.sancell.xingqiu.widget.RelativeSizeTextView
                            android:id="@+id/tv_red_packet_settled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/color_text1"
                            android:textSize="@dimen/sp_16"
                            fresco:startText="¥"
                            fresco:start_proportion="0.5"
                            fresco:start_text_color="@color/color_text1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/red_packet_settled_title"
                            android:textColor="@color/read_color"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_rp_voucher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">


                        <cn.sancell.xingqiu.widget.RelativeSizeTextView
                            android:id="@+id/tv_rp_voucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/color_text1"
                            android:textSize="@dimen/sp_16"
                            fresco:startText="¥"
                            fresco:start_proportion="0.5"
                            fresco:start_text_color="@color/color_text1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="红包抵用券"
                            android:textColor="@color/read_color"
                            android:textSize="@dimen/sp_11" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_money"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/round_white_8"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/order_title"
                    android:textColor="@color/color_text1"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_allorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@mipmap/icon_toright1"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text="@string/all_title"
                    android:textColor="@color/color_text6"
                    android:textSize="@dimen/sp_13" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_allorder"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_order_nopay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="23dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_order_nopay" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp">

                            <TextView
                                android:id="@+id/tv_nopay_num"
                                style="@style/OrderNumRedPointStyle" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/order_nopay"
                            android:textColor="@color/color_text5"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_order_undelivered"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="23dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_order_undelivered" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp">

                            <TextView
                                android:id="@+id/tv_undelivered_num"
                                style="@style/OrderNumRedPointStyle"
                                tools:text="666" />
                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="待使用"
                            android:textColor="@color/color_text5"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_order_delivered"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="23dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_order_delivered" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/tv_delivered_num"
                                style="@style/OrderNumRedPointStyle"
                                android:text="99" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="已完成"
                            android:textColor="@color/color_text5"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_order_evaluated"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="23dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/icon_order_finish" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="13dp">

                            <TextView
                                android:id="@+id/tv_evaluated_num"
                                style="@style/OrderNumRedPointStyle"
                                android:text="99" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/order_evaluated"
                            android:textColor="@color/color_text5"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_invite_friend"
                android:layout_width="343dp"
                android:layout_height="72dp"
                android:layout_below="@+id/rl_order"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_homeuser_invite_friend"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/rl_invite_active"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_below="@+id/iv_invite_friend"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/round_white_12"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="会议邀约"
                    android:textColor="@color/color_text1"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_active_title"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_below="@+id/tv_tip"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_text5"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_active_invite" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
