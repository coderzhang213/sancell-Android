<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.sancell.xingqiu.homeuser.UserSettingAboutUsActivity">

    <RelativeLayout
        android:id="@+id/rl_user_agreement"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/user_agreement"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_stroke1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_privacy_agreement"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_user_agreement"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/privacy_agreement"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_stroke1" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_red_packet_agreement"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_privacy_agreement"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/red_packet_agreement"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp"
            android:background="@color/color_stroke1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_member_agreement"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_red_packet_agreement"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/member_agreement"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_stroke1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_contact_us"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_member_agreement"
        android:background="@drawable/ripple_item_single"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/contact_us"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_14" />

        <ImageView
            style="@style/ToRightStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/icon_toright_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_contact_us"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/color_stroke1" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/tv_version"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/icon_aboutus_logo" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textColor="@color/color_text4"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>
