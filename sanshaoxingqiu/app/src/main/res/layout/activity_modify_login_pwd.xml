<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context="cn.sancell.xingqiu.homeuser.ModifyLoginPwdActivity">

    <EditText
        android:id="@+id/ed_old_pwd"
        style="@style/editText_pwd"
        android:hint="@string/input_old_pwd_hint" />

    <ImageView
        android:id="@+id/iv_clear_oldpwd"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ed_old_pwd"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ed_old_pwd"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_delete_phone"
        android:visibility="invisible" />

    <View
        android:id="@+id/line1"
        style="@style/login_line"
        android:layout_below="@+id/ed_old_pwd" />

    <EditText
        android:id="@+id/ed_new_pwd"
        style="@style/editText_pwd"
        android:layout_below="@+id/line1"
        android:hint="@string/input_new_pwd_hint" />

    <ImageView
        android:id="@+id/iv_clear_newpwd"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ed_new_pwd"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ed_new_pwd"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_delete_phone"
        android:visibility="invisible" />

    <View
        android:id="@+id/line2"
        style="@style/login_line"
        android:layout_below="@+id/ed_new_pwd" />

    <EditText
        android:id="@+id/ed_new_pwd_again"
        style="@style/editText_pwd"
        android:layout_below="@+id/line2"
        android:hint="@string/input_new_pwd_again_hint" />

    <ImageView
        android:id="@+id/iv_clear_newpwd_again"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ed_new_pwd_again"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ed_new_pwd_again"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_delete_phone"
        android:visibility="invisible" />

    <View
        android:id="@+id/line3"
        style="@style/login_line"
        android:layout_below="@+id/ed_new_pwd_again" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_marginTop="8dp"
        android:text="@string/input_pwd_format_tip"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/btn_sure"
        style="@style/login_btn"
        android:layout_below="@+id/tv_tip"
        android:layout_marginTop="40dp"
        android:text="@string/sure" />

</RelativeLayout>
