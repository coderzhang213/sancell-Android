<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_white_8"
    android:paddingBottom="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="发票须知"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/sv_info"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="267dp"
                android:layout_height="456dp"
                android:src="@mipmap/icon_invoice_introduce" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_know"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_below="@+id/sv_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/theme_btn_click_style"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
