<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_userphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/tv_username"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="26dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/tv_username"
        android:layout_toRightOf="@+id/tv_userphone"
        android:layout_marginBottom="3dp"
        android:background="@drawable/round_theme_2"
        android:gravity="center"
        android:text="默认"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginBottom="3dp"
        android:layout_alignBottom="@+id/tv_username"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/tv_default"
        android:background="@drawable/round_dda759_2"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/tv_edit"
        android:textColor="@color/color_text3"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_address"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_username"
        android:drawableLeft="@drawable/round_stroke1_1"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingRight="16dp"
        android:text="编辑"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
