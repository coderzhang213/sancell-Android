<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/shape_img_line_bg"
        android:padding="1dp" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_sold_out"
        android:background="@drawable/red_jdfd_bg"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/recl_did_bg"
            android:gravity="center"
            android:text="售罄" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="25dp"
        android:layout_height="18dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/live_reom_sor"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/iv_add_cart"
        android:layout_toRightOf="@+id/iv_goods"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_text1"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_watch"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_goods"
        android:text=""
        android:textColor="#FF4019"
        android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_name"
        android:layout_alignParentBottom="true"
        android:text="280"
        android:textColor="@color/color_btn_main_unable"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_real_price"
        android:text="300"
        android:textColor="@color/color_text6"
        android:textSize="12sp" />


    <TextView
        android:visibility="gone"
        android:id="@+id/iv_add_cart"
        android:layout_width="56dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="1dp"
        android:layout_toLeftOf="@+id/iv_add_com"
        android:background="@drawable/live_add_comm_de_shape"
        android:gravity="center"
        android:text="看讲解"
        android:textColor="@color/color_btn_main_unable"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_add_com"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/icon_video_add_cart" />

</RelativeLayout>