<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="@color/text_main"
            android:textSize="14sp"
            tools:text="十七十七十七" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tv_name"
            android:text="15633337777"
            android:textColor="@color/text_main"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_def"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@drawable/round_theme_2"
            android:gravity="center"
            android:text="默认"
            android:textColor="@color/text_color_white"
            android:textSize="11sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_def"
            android:background="@drawable/shape_address_not_tag_bg"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="老公家"
            android:textColor="@color/color_text2"
            android:textSize="11sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:text="上海上海市虹口区水电路1388号晟柏科技园16层晟柏科技园16层16层晟柏科技园16层"
            android:textColor="@color/color_text3"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>