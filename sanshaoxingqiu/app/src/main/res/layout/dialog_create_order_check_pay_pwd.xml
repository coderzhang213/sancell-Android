<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp"
    android:background="@drawable/round_color_white_tr_tl_8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/round_color_stroke5_tr_tl_8"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:text="请输入支付密码"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:paddingBottom="18dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="18dp"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_productinfo_dialog_close" />

    <cn.sancell.xingqiu.widget.VerificationCodeEditText
        android:id="@+id/ed_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dialog_close"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:text=""
        android:textColor="@color/color_text1"
        android:textSize="20sp"
        app:borderColor="@color/color_stroke1"
        app:borderWidth="1dp"
        app:bottomLineHeight="0dp"
        app:bottomLineNormalColor="@color/colorWhite"
        app:bottomLineSelectedColor="@color/colorWhite"
        app:cursorColor="@color/color_theme"
        app:dividerColor="@color/color_stroke1"
        app:dividerWidth="1dp"
        app:figures="6"
        app:pointRadius="6dp"
        app:selectedBackgroundColor="@color/colorWhite"
        app:showStyle="pay"
        app:verCodeMargin="0dp" />

    <TextView
        android:id="@+id/tv_error_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_pay_pwd"
        android:layout_marginLeft="40dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_function_error"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
