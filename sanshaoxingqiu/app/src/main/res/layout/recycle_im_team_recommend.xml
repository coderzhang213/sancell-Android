<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/ic_star" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_head"
        android:textColor="@color/color_text1"
        android:textSize="16sp"
        tools:text="三少买单①群" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_toLeftOf="@+id/btn_team"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/color_text3"
        android:textSize="@dimen/sp_14"
        tools:text="平台福利大放送，会员抢先体验" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_team"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/im_join_team_selector"
        android:gravity="center"
        android:textColor="@color/color_im_join_team_selector"
        android:textSize="13sp"
        tools:text="申请加入" />
</RelativeLayout>