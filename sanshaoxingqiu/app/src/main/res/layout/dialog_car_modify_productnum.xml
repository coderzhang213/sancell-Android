<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white_8"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="修改购买数量"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_14" />

    <EditText
        android:id="@+id/ed_dialog_num"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:text="98"
        android:textColor="@color/color_text1"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:background="@color/color_stroke2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="102dp"
            android:layout_height="32dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/round_theme_16_stroke1"
            android:gravity="center"
            android:text="@string/permission_cancel"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="102dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/round_theme_16"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


</LinearLayout>
