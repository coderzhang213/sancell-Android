<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <corners android:radius="5dp" />
    <solid android:color="@color/color_E03A14" />

    <item>
        <shape
            android:shape="oval"
            android:useLevel="true">
            <stroke
                android:width="2dp"
                android:color="@color/white" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape
            android:shape="oval"
            android:useLevel="true">
            <solid android:color="@color/color_E03A14" />
        </shape>
    </item>


</layer-list>